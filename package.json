{
  "name": "spawanie-trzebnica-theme",
  "version": "1.0.0",
  "description": "Modernizacja strony spawanietrzebnica.pl - WordPress theme",
  "author": "PB MEDIA",
  "license": "GPL-2.0-or-later",
  "private": true,
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:production": "NODE_ENV=production webpack --mode production",
    "watch": "webpack --mode development --watch",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:php",
    "lint:js": "eslint 'wp-content/themes/spawanie-trzebnica/assets/src/**/*.js'",
    "lint:css": "stylelint 'wp-content/themes/spawanie-trzebnica/assets/src/**/*.{css,scss}'",
    "lint:php": "composer run-script lint",
    "fix": "npm run fix:js && npm run fix:css && npm run fix:php",
    "fix:js": "eslint 'wp-content/themes/spawanie-trzebnica/assets/src/**/*.js' --fix",
    "fix:css": "stylelint 'wp-content/themes/spawanie-trzebnica/assets/src/**/*.{css,scss}' --fix",
    "fix:php": "composer run-script fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "clean": "rimraf wp-content/themes/spawanie-trzebnica/assets/dist",
    "icons": "svgo -f wp-content/themes/spawanie-trzebnica/assets/src/icons -o wp-content/themes/spawanie-trzebnica/assets/dist/icons",
    "critical": "critical wp-content/themes/spawanie-trzebnica/assets/dist/css/critical.css --base ./ --inline --minify > wp-content/themes/spawanie-trzebnica/inc/critical-css.php",
    "lighthouse": "lighthouse http://localhost:8080 --output html --output-path ./lighthouse-report.html",
    "wp": "docker-compose run --rm wpcli",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@playwright/test": "^1.39.0",
    "@wordpress/eslint-plugin": "^17.0.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "browser-sync": "^2.29.3",
    "browser-sync-webpack-plugin": "^2.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "critical": "^6.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "image-minimizer-webpack-plugin": "^3.9.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webp": "^8.0.0",
    "jest": "^29.7.0",
    "lighthouse": "^11.3.0",
    "lint-staged": "^15.0.2",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-order": "^6.0.3",
    "svgo": "^3.0.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@wordpress/dom-ready": "^3.47.0",
    "@wordpress/i18n": "^4.47.0",
    "aos": "^2.3.4",
    "core-js": "^3.33.2",
    "lazysizes": "^5.3.2",
    "lightbox2": "^2.11.4",
    "swiper": "^11.0.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.php": [
      "composer run-script fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}